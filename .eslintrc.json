{
    "extends": ["airbnb", "prettier", "react-app", "plugin:prettier/recommended"],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": ["error"],
        "jsx-a11y/href-no-hash": [0],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "react/jsx-indent": [
            "error",
            4,
            { "checkAttributes": true, "indentLogicalExpressions": true }
        ],
        "react/destructuring-assignment": [true, "always", { "ignoreClassFields": true }],
        "react/jsx-one-expression-per-line": [true, { "allow": "single-child" }],
        "react/jsx-indent-props": [true, "tab"]
    }
}
